        var ok: Bool = e.Some_Expr?
        var str: _(char*) = e.Some_Expr!.Expr_Native!.2.Str!
        call _assert _(ok.sub && !strcmp(str,"x"))
        call close ()
    }
    -- EXPR_TUPLE
    {
        call open _{"((),x,"}
