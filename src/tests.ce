var lin: Int = ?
var col: Int = ?
var tk0: (Int,TK_Val,Int,Int) = ?   -- enu, val, lin, col   // CE2: typedef
var tk1: (Int,TK_Val,Int,Int) = ?   -- enu, val, lin, col
