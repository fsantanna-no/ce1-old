type Bool {                 -- CE2: include prelude
    False: ()
    True:  ()
}

func not: Bool -> Bool {
    if arg {
        return False
    } else {
        return True
    }
}

func and: (Bool,Bool) -> Bool {
    if arg.1 {
        return arg.2
    } else {
        return False
    }
}

func or: (Bool,Bool) -> Bool {
    if arg.1 {
        return True
    } else {
        return arg.2
    }
}

func asbool: Int -> Bool {
    return _(arg ? (Bool){True} : (Bool){False})
}

